{
  "name": "finance-desktop",
  "version": "0.0.5",
  "productName": "Finance",
  "private": true,
  "author": {
    "name": "Chris Breiding",
    "url": "http://chrisbreiding.com/"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "icons": "mkdir -p build && iconutil -c icns assets/icon.iconset -o build/icon.icns",
    "start": "NODE_ENV=production electron .",
    "start-dev": "NODE_ENV=development electron .",
    "watch": "nodemon --exec 'electron .'",
    "move-app": "mv dist/*.dmg ~/Dropbox/",
    "deploy": "npm run dist && npm run move-app",
    "dist": "npm run icons && electron-builder",
    "dist-only": "electron-builder"
  },
  "build": {
    "appId": "com.chrisbreiding.finance.desktop",
    "mac": {
      "category": "public.app-category.finance"
    }
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "chalk": "^1.1.3",
    "debug": "^4.1.0",
    "electron-store": "^2.0.0",
    "electron-context-menu": "^0.10.1",
    "express": "^4.15.3",
    "firebase": "^4.1.3",
    "fs-extra": "3.0.1",
    "homedir": "^0.6.0",
    "jquery": "^3.2.1",
    "lodash": "^4.17.10",
    "moment": "^2.29.2",
    "morgan": "^1.9.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "electron": "^3.0.12",
    "electron-builder": "^20.38.3",
    "eslint": "^3.19.0",
    "nodemon": "^1.11.0",
    "request": "^2.81.0",
    "request-promise": "^4.2.1"
  }
}
